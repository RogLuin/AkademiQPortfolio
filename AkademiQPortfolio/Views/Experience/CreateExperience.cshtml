@model AkademiQPortfolio.Data.AppDbContext
@{
    ViewData["Title"] = "Yeni Deneyim Oluşturma Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* ═══════════════════════════════════════════════════════════════
           PREMIUM CREATE EXPERIENCE PAGE - Modern Dark Theme
        ═══════════════════════════════════════════════════════════════ */

    .page-section {
        padding: 2rem;
        min-height: 100vh;
        background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
        position: relative;
        overflow: hidden;
    }

        /* Animated Background */
        .page-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.08) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.06) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(98, 0, 234, 0.05) 0%, transparent 40%);
            animation: floatBg 20s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes floatBg {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(2%, 2%) rotate(1deg);
        }

        66% {
            transform: translate(-1%, 1%) rotate(-1deg);
        }
    }

    /* Top Navigation Bar */
    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        position: relative;
        z-index: 2;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 500;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(167, 139, 250, 0.4);
            color: #fff;
            transform: translateX(-5px);
        }

        .btn-back i {
            transition: transform 0.3s ease;
        }

        .btn-back:hover i {
            transform: translateX(-3px);
        }

    /* Page Header */
    .page-header {
        text-align: center;
        margin-bottom: 2.5rem;
        position: relative;
        z-index: 2;
    }

    .page-header-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #a78bfa, #818cf8);
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #fff;
        box-shadow: 0 20px 40px rgba(167, 139, 250, 0.3);
        animation: iconFloat 3s ease-in-out infinite;
    }

    @@keyframes iconFloat {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #fff 0%, #a78bfa 50%, #818cf8 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0 0 0.5rem 0;
    }

    .page-header p {
        color: rgba(255, 255, 255, 0.5);
        font-size: 1rem;
        margin: 0;
    }

    /* Progress Steps */
    .progress-steps {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 2.5rem;
        position: relative;
        z-index: 2;
    }

    .step {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 30px;
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.875rem;
        font-weight: 500;
    }

        .step.active {
            background: rgba(167, 139, 250, 0.15);
            border-color: rgba(167, 139, 250, 0.4);
            color: #a78bfa;
        }

    .step-number {
        width: 24px;
        height: 24px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 700;
    }

    .step.active .step-number {
        background: linear-gradient(135deg, #a78bfa, #818cf8);
        color: #fff;
    }

    /* Main Form Card */
    .form-card {
        max-width: 700px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.02);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 28px;
        padding: 2.5rem;
        position: relative;
        z-index: 2;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    }

        .form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(167, 139, 250, 0.5), transparent);
            border-radius: 28px 28px 0 0;
        }

    /* Form Groups */
    .form-group {
        margin-bottom: 1.75rem;
    }

        .form-group label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
            color: rgba(255, 255, 255, 0.8);
            font-weight: 600;
            font-size: 0.95rem;
        }

            .form-group label i {
                color: #a78bfa;
                font-size: 0.875rem;
            }

            .form-group label .required {
                color: #ef4444;
                font-size: 0.75rem;
            }

    /* Input Fields */
    .form-input,
    .form-textarea {
        width: 100%;
        padding: 1rem 1.25rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 14px;
        color: #fff;
        font-size: 1rem;
        outline: none;
        transition: all 0.3s ease;
    }

        .form-input::placeholder,
        .form-textarea::placeholder {
            color: rgba(255, 255, 255, 0.3);
        }

        .form-input:hover,
        .form-textarea:hover {
            border-color: rgba(255, 255, 255, 0.2);
        }

        .form-input:focus,
        .form-textarea:focus {
            border-color: rgba(167, 139, 250, 0.6);
            background: rgba(167, 139, 250, 0.05);
            box-shadow: 0 0 0 4px rgba(167, 139, 250, 0.1);
        }

    .form-textarea {
        resize: vertical;
        min-height: 120px;
    }

    /* Input Hint */
    .input-hint {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.5rem;
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.8rem;
    }

        .input-hint i {
            font-size: 0.7rem;
        }

    /* Form Divider */
    .form-divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        margin: 2rem 0;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    .btn-cancel {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 14px;
        color: rgba(255, 255, 255, 0.6);
        font-weight: 500;
        font-size: 0.95rem;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.4);
            color: #ef4444;
        }

    .btn-success {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: #fff;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);
    }

        .btn-success:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(16, 185, 129, 0.5);
        }

        .btn-success i {
            transition: transform 0.3s ease;
        }

        .btn-success:hover i {
            transform: scale(1.2);
        }

    /* Tips Card */
    .tips-card {
        max-width: 700px;
        margin: 2rem auto 0;
        background: rgba(251, 191, 36, 0.05);
        border: 1px solid rgba(251, 191, 36, 0.15);
        border-radius: 16px;
        padding: 1.5rem;
        position: relative;
        z-index: 2;
    }

        .tips-card h4 {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #fbbf24;
            font-size: 0.95rem;
            font-weight: 600;
            margin: 0 0 1rem 0;
        }

    .tips-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .tips-list li {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.875rem;
            margin-bottom: 0.75rem;
            line-height: 1.5;
        }

            .tips-list li:last-child {
                margin-bottom: 0;
            }

            .tips-list li i {
                color: #fbbf24;
                font-size: 0.7rem;
                margin-top: 0.35rem;
            }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-section {
            padding: 1rem;
        }

        .page-header h1 {
            font-size: 1.5rem;
        }

        .progress-steps {
            flex-wrap: wrap;
        }

        .form-card {
            padding: 1.5rem;
            border-radius: 20px;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-cancel,
        .btn-success {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="page-section">
    <!-- Top Bar -->
    <div class="top-bar">
        <a href="/Experience/Index" class="btn-back">
            <i class="fa-solid fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-icon">
            <i class="fa-solid fa-briefcase"></i>
        </div>
        <h1>Yeni Deneyim Ekle</h1>
        <p>Kariyer geçmişinize yeni bir deneyim ekleyin</p>
    </div>

    <!-- Progress Steps -->
    <div class="progress-steps">
        <div class="step active">
            <span class="step-number">1</span>
            Temel Bilgiler
        </div>
        <div class="step">
            <span class="step-number">2</span>
            Detaylar
        </div>
        <div class="step">
            <span class="step-number">3</span>
            Tamamla
        </div>
    </div>

    <!-- Form Card -->
    <div class="form-card">
        <form method="post" action="/Experience/CreateExperience">

            <div class="form-group">
                <label>
                    <i class="fa-solid fa-user-tie"></i>
                    Pozisyon
                    <span class="required">*</span>
                </label>
                <input type="text"
                       name="Title"
                       class="form-input"
                       placeholder="Örn: Senior Frontend Developer"
                       required />
                <div class="input-hint">
                    <i class="fa-solid fa-circle-info"></i>
                    İş pozisyonunuzu veya ünvanınızı girin
                </div>
            </div>

            <div class="form-group">
                <label>
                    <i class="fa-solid fa-building"></i>
                    Firma Adı
                    <span class="required">*</span>
                </label>
                <input type="text"
                       name="CompanyName"
                       class="form-input"
                       placeholder="Örn: Google, Microsoft, Startup XYZ"
                       required />
                <div class="input-hint">
                    <i class="fa-solid fa-circle-info"></i>
                    Çalıştığınız şirketin adını girin
                </div>
            </div>

            <div class="form-divider"></div>

            <div class="form-group">
                <label>
                    <i class="fa-solid fa-calendar-days"></i>
                    Çalışma Tarihi
                    <span class="required">*</span>
                </label>
                <input type="text"
                       name="WorkDate"
                       class="form-input"
                       placeholder="Örn: 2020 - 2023 veya 2021 - Halen"
                       required />
                <div class="input-hint">
                    <i class="fa-solid fa-circle-info"></i>
                    Başlangıç ve bitiş tarihlerini belirtin
                </div>
            </div>

            <div class="form-group">
                <label>
                    <i class="fa-solid fa-align-left"></i>
                    Açıklama
                    <span class="required">*</span>
                </label>
                <textarea name="Description"
                          class="form-textarea"
                          rows="4"
                          placeholder="Bu pozisyonda yaptığınız işleri, başarılarınızı ve sorumlulukların kısaca açıklayın..."
                          required></textarea>
                <div class="input-hint">
                    <i class="fa-solid fa-circle-info"></i>
                    En az 50 karakter yazmanız önerilir
                </div>
            </div>

            <div class="form-actions">
                <a href="/ExperienceController/Index" class="btn-cancel">
                    <i class="fa-solid fa-xmark"></i> İptal
                </a>
                <button type="submit" class="btn-success">
                    <i class="fa-solid fa-check"></i> Deneyimi Kaydet
                </button>
            </div>

        </form>
    </div>

    <!-- Tips Card -->
    <div class="tips-card">
        <h4>
            <i class="fa-solid fa-lightbulb"></i>
            Etkili Deneyim Yazma İpuçları
        </h4>
        <ul class="tips-list">
            <li>
                <i class="fa-solid fa-circle"></i>
                Pozisyonunuzu net ve profesyonel bir şekilde yazın
            </li>
            <li>
                <i class="fa-solid fa-circle"></i>
                Açıklamada somut başarılarınızı ve projelerinizi belirtin
            </li>
            <li>
                <i class="fa-solid fa-circle"></i>
                Kullandığınız teknolojileri ve araçları eklemeyi unutmayın
            </li>
            <li>
                <i class="fa-solid fa-circle"></i>
                Mümkünse sayısal verilerle destekleyin (örn: %30 verimlilik artışı)
            </li>
        </ul>
    </div>
</div>