@model Experience
@{
    ViewData["Title"] = "Deneyim Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* ═══════════════════════════════════════════════════════════════
           PREMIUM UPDATE EXPERIENCE PAGE - Edit Mode Theme
        ═══════════════════════════════════════════════════════════════ */

    .page-section {
        padding: 2rem;
        min-height: 100vh;
        background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
        position: relative;
        overflow: hidden;
    }

        /* Animated Background */
        .page-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at 20% 80%, rgba(251, 191, 36, 0.06) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(245, 158, 11, 0.05) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(217, 119, 6, 0.04) 0%, transparent 40%);
            animation: floatBg 20s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes floatBg {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(2%, 2%) rotate(1deg);
        }

        66% {
            transform: translate(-1%, 1%) rotate(-1deg);
        }
    }

    /* Top Navigation Bar */
    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        position: relative;
        z-index: 2;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 500;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(251, 191, 36, 0.4);
            color: #fff;
            transform: translateX(-5px);
        }

        .btn-back i {
            transition: transform 0.3s ease;
        }

        .btn-back:hover i {
            transform: translateX(-3px);
        }

    /* Edit Mode Badge */
    .edit-mode-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(251, 191, 36, 0.15);
        border: 1px solid rgba(251, 191, 36, 0.3);
        border-radius: 20px;
        color: #fbbf24;
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

        .edit-mode-badge i {
            animation: pulse 2s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }
    }

    /* Page Header */
    .page-header {
        text-align: center;
        margin-bottom: 2.5rem;
        position: relative;
        z-index: 2;
    }

    .page-header-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #fbbf24, #f59e0b);
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #fff;
        box-shadow: 0 20px 40px rgba(251, 191, 36, 0.3);
        position: relative;
    }

        .page-header-icon::after {
            content: '';
            position: absolute;
            top: -4px;
            right: -4px;
            width: 20px;
            height: 20px;
            background: linear-gradient(135deg, #22c55e, #16a34a);
            border-radius: 50%;
            border: 3px solid #0f0f1a;
        }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #fff 0%, #fbbf24 50%, #f59e0b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0 0 0.5rem 0;
    }

    .page-header p {
        color: rgba(255, 255, 255, 0.5);
        font-size: 1rem;
        margin: 0;
    }

    /* Current Data Preview */
    .current-data-preview {
        max-width: 700px;
        margin: 0 auto 1.5rem;
        background: rgba(251, 191, 36, 0.05);
        border: 1px solid rgba(251, 191, 36, 0.15);
        border-radius: 16px;
        padding: 1rem 1.5rem;
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .current-data-preview i {
            color: #fbbf24;
            font-size: 1.25rem;
        }

        .current-data-preview span {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
        }

        .current-data-preview strong {
            color: #fff;
        }

    /* Main Form Card */
    .form-card {
        max-width: 700px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.02);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 28px;
        padding: 2.5rem;
        position: relative;
        z-index: 2;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    }

        .form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(251, 191, 36, 0.5), transparent);
            border-radius: 28px 28px 0 0;
        }

    /* Form Section Header */
    .form-section-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

        .form-section-header i {
            width: 40px;
            height: 40px;
            background: rgba(251, 191, 36, 0.15);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fbbf24;
        }

    .form-section-header-text h3 {
        color: #fff;
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
    }

    .form-section-header-text span {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.85rem;
    }

    /* Form Groups */
    .form-group {
        margin-bottom: 1.75rem;
    }

        .form-group label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
            color: rgba(255, 255, 255, 0.8);
            font-weight: 600;
            font-size: 0.95rem;
        }

            .form-group label i {
                color: #fbbf24;
                font-size: 0.875rem;
            }

            .form-group label .required {
                color: #ef4444;
                font-size: 0.75rem;
            }

    /* Input Fields */
    .form-input,
    .form-textarea {
        width: 100%;
        padding: 1rem 1.25rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 14px;
        color: #fff;
        font-size: 1rem;
        outline: none;
        transition: all 0.3s ease;
    }

        .form-input::placeholder,
        .form-textarea::placeholder {
            color: rgba(255, 255, 255, 0.3);
        }

        .form-input:hover,
        .form-textarea:hover {
            border-color: rgba(255, 255, 255, 0.2);
        }

        .form-input:focus,
        .form-textarea:focus {
            border-color: rgba(251, 191, 36, 0.6);
            background: rgba(251, 191, 36, 0.05);
            box-shadow: 0 0 0 4px rgba(251, 191, 36, 0.1);
        }

    .form-textarea {
        resize: vertical;
        min-height: 120px;
    }

    /* Form Divider */
    .form-divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        margin: 2rem 0;
    }

    /* Warning Box */
    .warning-box {
        background: rgba(239, 68, 68, 0.08);
        border: 1px solid rgba(239, 68, 68, 0.2);
        border-radius: 14px;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
    }

        .warning-box i {
            color: #ef4444;
            font-size: 1.1rem;
            margin-top: 0.1rem;
        }

        .warning-box p {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.875rem;
            margin: 0;
            line-height: 1.5;
        }

    /* Form Actions */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    .btn-cancel {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 14px;
        color: rgba(255, 255, 255, 0.6);
        font-weight: 500;
        font-size: 0.95rem;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.4);
            color: #ef4444;
        }

    .btn-update {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: #000;
        font-weight: 700;
        font-size: 1rem;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(251, 191, 36, 0.4);
    }

        .btn-update:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(251, 191, 36, 0.5);
        }

        .btn-update i {
            transition: transform 0.3s ease;
        }

        .btn-update:hover i {
            transform: rotate(15deg);
        }

    /* Record Info Footer */
    .record-info {
        max-width: 700px;
        margin: 1.5rem auto 0;
        text-align: center;
        color: rgba(255, 255, 255, 0.3);
        font-size: 0.8rem;
        position: relative;
        z-index: 2;
    }

        .record-info i {
            margin-right: 0.5rem;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-section {
            padding: 1rem;
        }

        .top-bar {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }

        .page-header h1 {
            font-size: 1.5rem;
        }

        .form-card {
            padding: 1.5rem;
            border-radius: 20px;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-cancel,
        .btn-update {
            width: 100%;
            justify-content: center;
        }

        .current-data-preview {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<div class="page-section">
    <!-- Top Bar -->
    <div class="top-bar">
        <a href="/Experience/Index" class="btn-back">
            <i class="fa-solid fa-arrow-left"></i> Geri Dön
        </a>
        <div class="edit-mode-badge">
            <i class="fa-solid fa-pen-to-square"></i>
            Düzenleme Modu
        </div>
    </div>

    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-icon">
            <i class="fa-solid fa-briefcase"></i>
        </div>
        <h1>Deneyimi Güncelle</h1>
        <p>Mevcut deneyim bilgilerini düzenleyin</p>
    </div>

    <!-- Current Data Preview -->
    <div class="current-data-preview">
        <i class="fa-solid fa-circle-info"></i>
        <span>Düzenleniyor: <strong>@Model.Title</strong> - @Model.CompanyName</span>
    </div>

    <!-- Form Card -->
    <div class="form-card">
        <form method="post" action="/Experience/UpdateExperience">
            <input type="hidden" name="ExperianceId" value="@Model.ExperianceId" />

            <!-- Section Header -->
            <div class="form-section-header">
                <i class="fa-solid fa-edit"></i>
                <div class="form-section-header-text">
                    <h3>Deneyim Bilgileri</h3>
                    <span>Aşağıdaki alanları güncelleyebilirsiniz</span>
                </div>
            </div>

            <div class="form-group">
                <label>
                    <i class="fa-solid fa-user-tie"></i>
                    Pozisyon
                    <span class="required">*</span>
                </label>
                <input type="text"
                       name="Title"
                       class="form-input"
                       value="@Model.Title"
                       placeholder="Örn: Senior Frontend Developer"
                       required />
            </div>

            <div class="form-group">
                <label>
                    <i class="fa-solid fa-building"></i>
                    Firma Adı
                    <span class="required">*</span>
                </label>
                <input type="text"
                       name="CompanyName"
                       class="form-input"
                       value="@Model.CompanyName"
                       placeholder="Örn: Google, Microsoft"
                       required />
            </div>

            <div class="form-divider"></div>

            <div class="form-group">
                <label>
                    <i class="fa-solid fa-calendar-days"></i>
                    Çalışma Tarihi
                    <span class="required">*</span>
                </label>
                <input type="text"
                       name="WorkDate"
                       class="form-input"
                       value="@Model.WorkDate"
                       placeholder="Örn: 2020 - 2023"
                       required />
            </div>

            <div class="form-divider"></div>

            <!-- Warning Box -->
            <div class="warning-box">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <p>Bu işlem mevcut deneyim kaydını güncelleyecektir. Değişiklikler kaydedildikten sonra geri alınamaz.</p>
            </div>

            <div class="form-actions">
                <a href="/Experience/Index" class="btn-cancel">
                    <i class="fa-solid fa-xmark"></i> İptal
                </a>
                <button type="submit" class="btn-update">
                    <i class="fa-solid fa-check"></i> Değişiklikleri Kaydet
                </button>
            </div>
        </form>
    </div>

    <!-- Record Info -->
    <div class="record-info">
        <i class="fa-regular fa-clock"></i>
        Kayıt ID: #@Model.ExperianceId
    </div>
</div>